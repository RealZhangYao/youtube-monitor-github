# YouTube Monitor Environment Variables
# Copy this file to .env and fill in your values

# YouTube Data API v3 Key
# Get from: https://console.cloud.google.com
YOUTUBE_API_KEY=your-youtube-api-key-here

# Google AI Studio (Gemini) API Key  
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# Gmail Configuration
# Your Gmail address
GMAIL_USER=your-email@gmail.com
# App-specific password (not your regular password)
# Get from: https://myaccount.google.com/apppasswords
GMAIL_APP_PASSWORD=xxxx xxxx xxxx xxxx

# Email recipient
RECIPIENT_EMAIL=recipient@example.com

# Target Username to Monitor (primary method)
# Set this to monitor a specific channel by username/handle
TARGET_USERNAME=lidangzzz

# YouTube Channels to Monitor (comma-separated, fallback method)
# Example channel IDs:
# - The Verge: UCddiUEpeqJcYeBxX1IVBKvQ
# - Google Developers: UC_x5XG1OV2P6uZZ5FSM9Ttw
CHANNELS_TO_MONITOR=UCddiUEpeqJcYeBxX1IVBKvQ,UC_x5XG1OV2P6uZZ5FSM9Ttw

# Use DownSub.com for subtitle download (recommended)
USE_DOWNSUB=true

# Get Latest Video Only (ignores processed status)
# Set to 'true' to always process the most recent video and send email
GET_LATEST=false

# Optional: Set to 'true' to run in test mode
TEST_MODE=false

# GitHub Personal Access Token for MCP
# Create at: https://github.com/settings/personal-access-tokens/new
# Required scopes: repo
GITHUB_PAT=your_github_personal_access_token_here