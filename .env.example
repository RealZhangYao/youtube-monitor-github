# YouTube Monitor Environment Variables
# Copy this file to .env and fill in your values

# YouTube Data API v3 Key
# Get from: https://console.cloud.google.com
YOUTUBE_API_KEY=your-youtube-api-key-here

# Google AI Studio (Gemini) API Key  
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# Gmail Configuration
# Your Gmail address
GMAIL_USER=your-email@gmail.com
# App-specific password (not your regular password)
# Get from: https://myaccount.google.com/apppasswords
GMAIL_APP_PASSWORD=xxxx xxxx xxxx xxxx

# Email recipient
RECIPIENT_EMAIL=recipient@example.com

# YouTube Channels to Monitor (comma-separated)
# Example channel IDs:
# - The Verge: UCddiUEpeqJcYeBxX1IVBKvQ
# - Google Developers: UC_x5XG1OV2P6uZZ5FSM9Ttw
CHANNELS_TO_MONITOR=UCddiUEpeqJcYeBxX1IVBKvQ,UC_x5XG1OV2P6uZZ5FSM9Ttw

# Optional: Set to 'true' to run in test mode
TEST_MODE=false